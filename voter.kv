<LoginScreen>:
    FloatLayout:
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos
        Banner:
            text: 'LOGIN'
            btn: ''
            btn_colour:(0.85,0.1,0.1,1)
            method: root.method
        Footer:

        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.5, 0.5)
            pos: root.center_x - self.width/2, root.center_y - self.height * (1/2)
            spacing: 10
            padding: 10
            canvas:
                Color:
                    rgba: 0.14,0.17,0.19,1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
            BoxLayout:
                orientation: 'vertical'

                Label:
                    size_hint: (None, None)
                    height: self.texture_size[1]
                    width: self.texture_size[0]
                    pos_x: self.width/2
                    pos_y: 0
                    text: 'USERNAME'
                    font_size: root.height/20

                TextInput:
                    id: username
                    font_size: self.height * (3/5)
                    multiline: False

            BoxLayout:
                orientation: 'vertical'

                Label:
                    size_hint: (None, None)
                    height: self.texture_size[1]
                    width: self.texture_size[0]
                    pos_x: self.width/2
                    pos_y: 0
                    text: 'PASSWORD'
                    font_size: root.height/20

                TextInput:
                    id: password
                    font_size: self.height * (3/5)
                    password: True
                    multiline: False

            BoxLayout:
                size_hint: (1, 0.95)
                padding: 10
                spacing: 10
                RoundedButton:
                    colour: (0.17,0.37,0.55,1)
                    text: 'NEW USER'
                    font_size: root.height/25
                    on_release: root.create_new_user()

                RoundedButton:
                    colour: (0.85,0.1,0.1,1)
                    text: 'LOGIN'
                    font_size: root.height/25
                    on_release: root.login(username.text, password.text)


